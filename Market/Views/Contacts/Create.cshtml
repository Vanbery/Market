@model Market.Models.Contact

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>客戶聯絡人</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
